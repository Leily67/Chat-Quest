    "/messages": {
      "get": {
        "tags": ["messages"],
        "description": "Get all messages",
        "operationId": "messages",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Message"
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
