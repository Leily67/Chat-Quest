    "/users/{id}/messages": {
      "get": {
        "tags": ["users"],
        "description": "Get all messages of a user",
        "operationId": "users-messages",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
