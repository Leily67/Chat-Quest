{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Chatquest",
    "description": "The chatquest API documentation"
  },
  "basePath": "/api/",
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    },
    "ApiKey": {
      "type": "apiKey",
      "name": "x-api-key",
      "in": "header"
    }
  },
  "security": [
    {
      "Bearer": [],
      "ApiKey": []
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Authentication management"
    },
    {
      "name": "authenticated-user",
      "description": "Authenticated user endpoints"
    },
    {
      "name": "users",
      "description": "Users endpoints"
    },
    {
      "name": "messages",
      "description": "Messages endpoints"
    },
    {
      "name": "rooms",
      "description": "Rooms endpoints"
    }
  ],
  "schemes": ["http", "https"],
  "paths": {
    "/auth/sign-in": {
      "post": {
        "tags": ["auth"],
        "description": "Authenticate to the application",
        "operationId": "sign-in",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sign-In"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Authenticated"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    },
    "/auth/sign-up": {
      "post": {
        "tags": ["auth"],
        "description": "Register to the application",
        "operationId": "sign-up",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sign-Up"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Authenticated"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          },
          "422": {
            "description": "Unprocessable entity",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    },
    "/auth/tmp": {
      "post": {
        "tags": ["auth"],
        "description": "Create a temporary user",
        "operationId": "temp",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Authenticated"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    },
    "/auth/sign-out": {
      "post": {
        "tags": ["auth"],
        "description": "Sign out",
        "operationId": "sign-out",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Authenticated"
            }
          },
          "204": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    },
    "/authenticated-user/me": {
      "get": {
        "tags": ["authenticated-user"],
        "description": "Get the logged user",
        "operationId": "me",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Authenticated"
            }
          },
          "401": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    },
    "/authenticated-user/rooms": {
      "get": {
        "tags": ["authenticated-user"],
        "description": "Get the rooms that the logged user has access",
        "operationId": "me",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "room": {
                    "$ref": "#/definitions/Room"
                  },
                  "messages": {
                    "type": "array",
                    "items": {
                      "$ref": "#/definitions/Message"
                    }
                  },
                  "users": {
                    "type": "array",
                    "items": {
                      "$ref": "#/definitions/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    },
