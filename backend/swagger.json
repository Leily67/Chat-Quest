  "definitions": {
    "Response": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "Sign-In": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "default": "user1@gmail.com"
        },
        "password": {
          "type": "string",
          "default": "Password*123"
        }
      }
    },
    "Sign-Up": {
      "type": "object",
      "properties": {
        "nickname": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string",
          "default": "Password*123"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "nickname": {
          "type": "string"
        },
        "uuid": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "is_temporary": {
          "type": "boolean",
          "default": false
        },
        "friends": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "Authenticated": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    },
    "Message": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "room": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "content": {
          "type": "string"
        },
        "is_edited": {
          "type": "boolean",
          "default": false
        },
        "is_vocal": {
          "type": "boolean",
          "default": false
        },
        "is_image": {
          "type": "boolean",
          "default": false
        },
        "from_server": {
          "type": "boolean",
          "default": false
        },
        "reactions": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/definitions/Reaction"
          }
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "Reaction": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "content": {
          "type": "string",
          "default": "üëç"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "Room": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "is_public": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    }
  }
}
