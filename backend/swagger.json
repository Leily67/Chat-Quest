    "/rooms/{id}/users": {
      "get": {
        "tags": ["rooms"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "minimum": 1,
            "description": "Room ID"
          }
        ],
        "description": "Get the users of a room",
        "operationId": "rooms-id-users",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
